@model OnlineStore2.ViewModels.MotorcycleCreateVM

@{
    ViewBag.Title = "Create";
}

<style>
    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    .form-control {
        width: 300px;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
    }
</style>

<h2>Create Motorcycle</h2>

@using (Html.BeginForm("Create", "Motorcycle", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Motorcycle.Model)
        @Html.TextBoxFor(model => model.Motorcycle.Model, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Motorcycle.Model)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Motorcycle.Price)
        @Html.TextBoxFor(model => model.Motorcycle.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Motorcycle.Price)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Motorcycle.BrandId)
        @Html.DropDownListFor(model => model.Motorcycle.BrandId, ViewBag.BrandId as SelectList, "Select Brand", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Motorcycle.BrandId)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Motorcycle.CategoryId)
        @Html.DropDownListFor(model => model.Motorcycle.CategoryId, ViewBag.CategoryId as SelectList, "Select Category", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Motorcycle.CategoryId)
    </div>

    <div class="form-group">
        <label>Upload Image</label>
        <input type="file" name="image" id="image" />
    </div>

    <div class="form-group">
        @Html.ListBoxFor(model => model.SelectedDealerIds, new MultiSelectList(ViewBag.Dealers as IEnumerable<SelectListItem>, "Value", "Text"), new { @class = "form-control" })
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
}
